# Hallmark Connect Credentials (NEVER commit the actual .env file)
HALLMARK_USERNAME=your_username_here
HALLMARK_PASSWORD=your_password_here

# MFA Configuration
N8N_WEBHOOK_URL=https://your-webhook-url.com/mfa
MFA_METHOD=manual  # Options: 'manual' or 'webhook'

# Application Configuration
BASE_URL=https://services.hallmarkconnect.com
OUTPUT_DIRECTORY=./data
LOG_LEVEL=INFO
MAX_RETRIES=3
HEADLESS_MODE=false

# Timeout Configuration
REQUEST_TIMEOUT_SECONDS=30    # Timeout for detail requests
SEARCH_TIMEOUT_SECONDS=120    # Timeout for search requests (take longer)

# Rate Limiting Configuration
RATE_LIMIT_SECONDS=2.5             # Legacy setting (use RATE_LIMIT_DETAIL_SECONDS instead)
RATE_LIMIT_DETAIL_SECONDS=2.5      # Delay between detail requests
RATE_LIMIT_SEARCH_SECONDS=5.0      # Delay between search requests
RATE_LIMIT_JITTER_SECONDS=0.5      # Random variation to make timing look human

# Periodic Break Configuration (to avoid detection)
BREAK_AFTER_REQUESTS=25       # Take a break after this many requests
BREAK_AFTER_JITTER=5          # Randomize break interval (requests ± jitter)
BREAK_DURATION_SECONDS=60     # How long to break for
BREAK_JITTER_SECONDS=15       # Randomize break duration (duration ± jitter)

# Conservative Mode (use if getting rate limited)
CONSERVATIVE_MODE=false       # When true: doubles delays, halves requests between breaks
